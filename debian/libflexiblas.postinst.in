#! /bin/sh

set -e

if [ "`lsb_release -r -s`" = "12.04" ]
then
	update-alternatives --install /usr/lib/libblas.so.3 libblas.so.3 /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/libblas.so.3 50 
	update-alternatives --install /usr/lib/libblas.so.3gf libblas.so.3gf /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/libblas.so.3 50
	update-alternatives --install /usr/lib/liblapack.so.3 liblapack.so.3 /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/liblapack.so.3 50 
	update-alternatives --install /usr/lib/liblapack.so.3gf liblapack.so.3gf /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/liblapack.so.3 50

else
	update-alternatives --install /usr/lib/libblas.so.3 libblas.so.3 /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/libblas.so.3 50 \
	--slave /usr/lib/libblas.so.3gf libblas.so.3gf /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/libblas.so.3
	update-alternatives --install /usr/lib/liblapack.so.3 liblapack.so.3 /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/liblapack.so.3 50 \
	--slave /usr/lib/liblapack.so.3gf liblapack.so.3gf /usr/lib/@DEB_HOST_MULTIARCH@/flexiblas/update-alternatives/liblapack.so.3

fi

flexiblas --global add NETLIB libflexiblas_netlib.so 

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


